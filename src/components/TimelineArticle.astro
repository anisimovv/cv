---
export interface Props {
  title: string;
  subTitle: string;
  date: string;
  description: string;
}

const { title, subTitle, date, description } = Astro.props;
---

<article class="flex mb-10">
  <div class="w-1/4 px-4 text-sm">{date}</div>
  <div class="w-3/4">
    <h1 class="font-bold text-lg">{title}</h1>
    <div class="text-sm mb-4">{subTitle}</div>
    <p>{description}</p>
  </div>
</article>
