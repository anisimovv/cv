---
export interface Props {
  text: string;
  customClassname?: string;
}

const { text, customClassname } = Astro.props;
---

<div
  class={`w-fit px-3 py-0.5 rounded-full border border-blue-600 text-blue-600 text-sm sm:text-base ${
    customClassname ? customClassname : ""
  }`}
>
  {text}
</div>
